{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset("dist/assets/css/contact.css") }}">
{% endblock %}

{% block body %}

<h1 class="text-center mt-5">Contact</h1>
<div class="p-5 container-xxl d-flex justify-content-around">
    <div class="row gx-5 row-cols-1 row-cols-sm-2 align-items-center">
    {# Infos de contact hors le formulaire #}
        <section class ="col-sm-12 col-md-6">
            <div class = "my-4">
                <span>Téléphone</span>
                <h2>+ 33 (0) 6 75 06 14 27</h2>
            </div>
            <div class = "my-4" class="">
                <span>Email</span>
                <h2>mauvefred@gmail.com</h2>
            </div>
            <div class = "my-4">
                <span>Adresse</span>
                <h2>Lorem ipsum dolor sit amet.</h2>
            </div>
            <div class = "my-4">
                <span>Suivez mon travail</span>
                <ul class="list-unstyled d-flex pb-3 mb-3 fs-1">
                    {# <li class="mx-3">
                        <a class="text-black" terget="_blank" href="#">
                            <i class="fa-brands fa-twitter"></i>
                        </a>
                    </li> #}
                    <li class="me-3 social">
                        <a class="text-black" terget="_blank" href="https://www.instagram.com/fredmauve/">
                            <i class="fa-brands fa-instagram"></i>
                        </a>
                    </li>
                    <li class="mx-3">
                        <a class="text-black" terget="_blank" href="https://www.facebook.com/people/Fred-Mauve-Artiste/100064602257294/">
                            <i class="fa-brands fa-facebook social"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </section>

        {# Le formulaire de contact #}
        <section class="bg-black text-light p-4 rounded-3 shadow-lg d-column-flex justify-content-center col-sm-12 col-md-6 form">
            <p class ="fs-4">Vous pouvez aussi me contacter directement via ce formulaire</p>
            {{ form_start(formContact) }}
            <div class="my-3">
                {{ form_row(formContact.name) }}
            </div>
            <div class="my-3">
                {{ form_row(formContact.email) }}
            </div>
            <div class="my-3">
                {{ form_row(formContact.subject) }}
            </div>
            <div class="my-3">
                {{ form_row(formContact.message) }}
            </div>
            <div class="mt-3 d-flex justify-content-center">
                {{ form_row(formContact.button) }}
            </div>
            {{ form_end(formContact) }}
            {# Message Flash #}
            {% for message in app.flashes('notice') %}
            <div class="flash-notice d-flex justify-content-center m-3">{{ message }}</div>
            {% endfor %}
        </section>
    </div>
</div>
{% endblock %}
