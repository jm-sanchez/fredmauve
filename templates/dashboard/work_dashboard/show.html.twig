{% extends 'dashboard/index.html.twig' %}

{% block title %}Œuvres{% endblock %}

{% block body %}
    <h1>Liste des Œuvres</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ work.id }}</td>
            </tr>
            <tr>
                <th>Technique</th>
                <td>{{ work.technique }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ work.format }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ work.category.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ work.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ work.image }}</td>
            </tr>
            <tr>
                <th>Image_detail</th>
                <td>{{ work.imageDetail ? work.imageDetail|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ work.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ work.date }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ work.localisation }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ work.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ work.quantity }}</td>
            </tr>
            <tr>
                <th>Saleable</th>
                <td>{{ work.saleable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_work_home') }}">back to list</a>

    <a href="{{ path('admin_work_update', {'id': work.id}) }}">edit</a>

    {{ include('dashboard/work_dashboard/_delete_form.html.twig') }}
{% endblock %}
