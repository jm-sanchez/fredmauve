{% extends 'dashboard/index.html.twig' %}

{% block title %}Modification d'actualité{% endblock %}


{% block body %}
{% block pageTitle %}{% endblock %}
    {{ parent()}}
    <h1 class = "text-center mt-5">Modifier une actualité</h1>

    {{ form_start(newsForm) }}
    <div class="d-flex flex-column align-items-center text-center">
        <div class="my-3 w-75">
        {{ form_row(newsForm.title) }}
        </div>
        <div class="my-3 w-75">
        {{ form_row(newsForm.description) }}
        </div>
        <div class="my-3 w-75">
        {{ form_row(newsForm.slug) }}
        </div>
        <div class="my-3 w-75">
        {{ form_row(newsForm.media) }}
        </div>
        <div class="my-3 w-75">
            <button class="btn btn-primary">
                Modifier
            </button>
        </div>
    </div>
    {{ form_end(newsForm) }}
{% endblock %}