{% extends 'dashboard/index.html.twig' %}

{% block title %}Ajout d'actualité{% endblock %}
{% block content %} {{ parent('content')}} {% endblock %}
{% block body %}
    <h1 class = "text-center mt-5">Ajouter une actualité</h1>

    {{ form_start(newsForm) }}
    <div class="d-flex flex-column align-items-center text-center">
    <div class="my-3 w-75">
    {{ form_row(newsForm.title) }}
    </div>
    <div class="my-3 w-75">
    {{ form_row(newsForm.description) }}
    </div>
    <div class="my-3 w-75">
    {{ form_row(newsForm.media) }}
    </div>
    <div class="my-3 w-75">
    {{ form_row(newsForm.ajouter) }}
    </div>
<div>
    {{ form_end(newsForm) }}
{% endblock %}